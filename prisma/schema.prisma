generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  nip          String   @unique
  password     String
  nama         String
  alamat       String
  telp         String
  jabatan      Jabatan? @relation(fields: [jabatanId], references: [id])
  jabatanId    Int?
  refreshToken String?
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
}

model Jabatan {
  id       Int        @id @default(autoincrement())
  jabatan  String
  user     User[]
  Karyawan Karyawan[]
}

model Status {
  id     Int     @id @default(autoincrement())
  status String
  Tiket  Tiket[]
}

model Tiket {
  id          String        @id @default(uuid())
  instansi    String
  lokasi      String
  tanggal     DateTime
  jenisSampel JenisSampel[]
  pj          String
  kontak_pj   String
  karyawan    Karyawan[]
  status      Status        @relation(fields: [statusId], references: [id])
  statusId    Int
  createAt    DateTime      @default(now())
  updateAt    DateTime      @updatedAt
}

model Karyawan {
  id        Int      @id @default(autoincrement())
  nip       String   @unique
  nama      String
  alamat    String
  telp      String
  jabatan   Jabatan? @relation(fields: [jabatanId], references: [id])
  jabatanId Int?
  tiket     Tiket[]
}

model JenisSampel {
  id     Int     @id @default(autoincrement())
  sampel String
  tiket  Tiket[]
}
